<h3>Cadastro de novo usuario</h3>
<form action="/auth/signup" id="signup" method="post">
<div class="mb-3">
  <label for="fullname" class="form-label">Nome Completo</label>
  <input type="text" class="form-control" id="fullname" name="fullname">
</div>
<div class="mb-3">
  <label for="email" class="form-label">Email</label>
  <input type="text" class="form-control" id="email" name="email">
</div>
<div class="mb-3">
  <label for="description" class="form-label">Curso</label>
  <select class="form-select" name="majorId">
     <option selected></option>
     {{#each majors}}
     <option value="{{id}}">{{name}}</option>
     {{/each}}
  </select>
</div>
<div class="mb-3">
  <label for="password" class="form-label">Senha</label>
  <input type="password" class="form-control" id="password" name="password">
</div>
<div class="mb-3">
  <label for="repeat-password" class="form-label">Repita a Senha</label>
  <input type="password" class="form-control" id="repeat-password">
</div>
<button type="submit" class="btn btn-primary">Enviar</button>
</form>

<script>
    const signup = document.getElementById("signup");
    signup.addEventListener("submit", (e) => {
        const password = document.getElementById("password").value;
        const repeatPassword = document.getElementById("repeat-password").value;
        if (!password || password !== repeatPassword ) e.preventDefault();
    });
</script>